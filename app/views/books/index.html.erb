<div class="container">
  <h1>Books</h1>
  <%= flash[:notice] %>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <td>title</td>
          <td>body</td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book|%>
        <tr>
          <td>
            <%= book.title%>
          </td>
          <td>
            <%= book.body%>
          </td>
          <td>
            <%= link_to "show", book_path(book) %>
          </td>
          <td>
            <%= link_to "edit", edit_book_path(book) %>
          </td>
          <td>
            <%= link_to "destroy", book_path(book), method: :delete, data: {confirm: 'Are you sure?'} %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <h1>New Book</h1>
  <div class="row">
    <%= render "form", book:@book %>
  </div>
</div>