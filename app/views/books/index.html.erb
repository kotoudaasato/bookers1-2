<div class="container">
  <h1>Books</h1>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <td>title</td>
          <td>body</td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book|%>
        <tr>
          <td>
            <%= book.title%>
          </td>
          <td>
            <%= book.body%>
          </td>
          <td>
            <%= link_to "show", book_path(book) %>
          </td>
          <td>
            <%= link_to "edit", edit_book_path(book) %>
          </td>
          <td>
            <%= link_to "destroy", book_path(book), method: :delete %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <h1>New Book</h1>
  <div class="row">
    <div class="book_form">
      <%=form_with model:@book ,local:true do |f| %>
        <div class="title_form p-3">
          <%= f.text_field :title %>
        </div>
        <div class="bodt_form p-3">
          <%= f.text_area :body %>
        </div>
        <div class="submit_btn pl-3">
          <%= f.submit "Create Book"%>
        </div>
      <% end %>
    </div>
  </div>
</div>